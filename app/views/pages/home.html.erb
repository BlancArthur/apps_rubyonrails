<h1 class='mid'>Galerie</h1>

<%# <button name="button" type="button" class='mid'>Ajouter une oeuvre</button> %>


<br>

  <div class='row overflow-hidden'>

<% @oeuvres.each do |oeuvre| %>
<div class="card mx-auto col-sm-6" style="width: 18rem;">
  <img src="<%= oeuvre.image %>" class="card-img-top card-img " alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= oeuvre.title %></h5>
    <p class="card-text"><%= oeuvre.content %></p>
    <%= link_to 'Show', oeuvre, class:'btn btn-primary '%>
  </div>
</div>
<% end %>

</div>







  


 
